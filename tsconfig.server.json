{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowJs": true
    },
    "include": ["server.ts", "scripts/**/*", "utils/**/*"],
    "exclude": ["node_modules"]
  }
  